rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Announcements folder - authenticated users can upload, anyone can read
    match /announcements/{masjidId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == masjidId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
